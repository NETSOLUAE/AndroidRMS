<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preapproval_search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeView_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/no_records_pre_approval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/no_records_available"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/search_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/comments_small">
            <SearchView
                android:id="@+id/pre_approval_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:queryBackground="@android:color/transparent"
                android:searchIcon="@drawable/search_icon">
            </SearchView></LinearLayout>
    </ScrollView>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ListView
                android:id="@+id/preapproval_search_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0.67dp"
                android:dividerHeight="0.67dp"
                android:divider="#dcdcdc" />
        </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>